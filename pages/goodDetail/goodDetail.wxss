/* pages/goodDetail/goodDetail.wxss */
@import "/app.wxss";
@import '../../lib/wxParse/wxParse.wxss';
image{
  display: block
}
.title{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  background: #eee
}
.t-list{
  display: flex;
  justify-content: space-around;
  margin: 0 20rpx
}
.t-img{
  display: block;
  width: 15rpx;
  height: 15rpx;
  position: relative;
  top: 40rpx
}
.t-name{
  font-size: 26rpx;
  color: #666
}
.bottom{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10rpx 20rpx;
  height: 80rpx;
  justify-content: space-between;
  background: #fff
}
.detail{
  font-size: 26rpx;
  color: #666;
  text-align: center;
}
.car{
  width: 190rpx;
  background: #FF9418;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 60rpx 0 0 60rpx;
  padding: 0 20rpx
}
.buy{
  width: 190rpx;
  background: #F5302B;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius:  0 60rpx 60rpx 0 ;
  padding: 0 20rpx
}
.info{
  text-align: center;
  margin-top: 40rpx;
  border-bottom: 1rpx solid #eee
}
.infoName{
  font-size: 34rpx;
  margin: 10rpx 0
}
.infoBrief{
  font-size: 28rpx
}
.infoPrice{
  color: #f45;
  margin: 30rpx 0
}
.attribute{
  display: flex;
  background: #F4F7F4;
  margin: 25rpx 0;
  padding: 10rpx ;
  line-height: 60rpx
}
.g-img{
  display: block;
  width: 100%;
}
.please{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx
}
.split{
  width: 100%!important;
  height: 30rpx;
  background: #f4f4f4
}
.product{
  height: 100rpx;
  line-height: 100rpx
}
.value{
  margin-left: 30rpx;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
flex: 1
}
.show{
  display: flex
}
.icon{
  flex: 1;
  margin: 20rpx 20rpx 0 240rpx
}
.s-img{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx
}
.right{
  margin:120rpx 0 0 30rpx
}
.count{
  margin:20rpx
}
.data{
  display: flex;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 20rpx;
}
.d-name{
  position: relative;
  top: -40rpx
}
.circle{
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #f45;
  position: relative;
  top: 20rpx;
  margin-right: 10rpx
}
.i-list{
  padding: 10rpx 0;
  
}
.c-list{
display: flex;
  flex-wrap: wrap;
}
.names{
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center

}
.list{
  width: 47%;
  margin: 1%;
  border: 1rpx solid #eee
}
.list-img{
  display: block;
  width: 100%;
  height: 250rpx
}
.red{
  color: red;
  border-bottom: 4rpx solid red
}
